{
  "compilerOptions": {
    "rootDir": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "module": "NodeNext",
    "outDir": "dist",
    "sourceMap": true,
    "checkJs": true,
    "noEmit": true,
    "lib": ["es2022"]
  }
}
